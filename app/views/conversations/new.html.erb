<h1> New Conversation</h1>

<%= form_tag conversations_path, method: :post do %>
<div>
<%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :username), class:'form-control' %>
</div>

<div>
  <%= text_field_tag :subject, nil, placeholder: "Subject of the message", class:'form-control' %>
</div>
<div>
  <%= text_area_tag :body, nil, placeholder: "Enter the body of your message here...", class:'form-control', style:'', rows: 10 %>

</div>
<%= submit_tag "Send Message", class:'btn btn-success pull-right' %>
<%= link_to "Back", :back, class:'btn btn-primary' %>
<% end %>
