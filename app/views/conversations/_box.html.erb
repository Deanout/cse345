<div class="well">
  <div class="">
    <h3>
    <% (conversation.participants - [current_user]).each do |user| %>
      <% if conversation.participants.count > 2 %>
      <%= user.username %> |
      <% else %>
      <%= user.username %>
      <% end %>
    <% end %>
  </h3>
  </div>
  <div class="">
    Sent at: <%= conversation.messages.last.created_at.strftime("%l:%M %p on %B %d, %Y ") %>.
  </div>
  <hr>
  <div class="">
    <%= link_to conversation.subject, conversation_path(conversation) %>
  </div>
</div>
