<% @conversation.receipts_for(current_user).each do |receipt| %>
<div class="well">
    <h3><%= receipt.message.sender.username %></h3>
    <strong><%= receipt.message.subject %></strong>
    <div class="pull-right">Sent at
        <%= receipt.message.created_at.strftime("%l:%M %p on %B %d, %Y ") %></div>

    <hr>
    <p><%= receipt.message.body %></p>
</div>
<% end %>

<%= form_tag conversation_messages_path(@conversation), method: :post do %>
<div>
    <%= text_area_tag :body, nil, placeholder: "Enter the body of your message here...", class:'form-control', style:'', rows: 5 %>
</div>
<%= submit_tag "Reply", class:'btn btn-success pull-right' %>
<%= link_to "All Conversations", conversations_path, class:'btn btn-primary' %>
<% end %>
