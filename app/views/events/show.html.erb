<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

    <!-- Preview Image -->
    <!-- Title -->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 style="text-align:center">
                <%= link_to @event.title, events_path %></h1>
            <p class="lead" style="text-align:center">Posted by
                <a href="#"><%= link_to User.find(@event.user_id).username, "#" %></a>
                <span class="glyphicon glyphicon-time"></span>
                <%= @event.created_at.strftime("on %B %d, %Y at %l:%M %p") %></p>
            <p></div>
              <div class="panel-body">
                <p><strong>This event starts at <%= @event.event_time.strftime("%l:%M %p on %B %d, %Y ") %>.</strong>
                <%= link_to ' Back', events_path, class: 'pull-right' %></p>
              </div>
              <div class="panel-footer"><%= @event.body %></div>
        </div>

    </div>
